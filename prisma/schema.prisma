generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model QA {
  id       String @id @default(cuid())
  question String
  answer   String
}

model VideoLink {
  id    String @id @default(cuid())
  title String
  url   String
  order Int
}

model Product {
  id          String @id @default(cuid())
  name        String
  description String
  price       Float
  imageUrl    String
}